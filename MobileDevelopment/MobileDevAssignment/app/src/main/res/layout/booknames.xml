<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_label_book_name"
        android:text="Book Name: "
        android:textSize="20dp"
        android:textColor="#0f9ef7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_name"
        android:layout_toRightOf="@+id/TextView_label_book_name"
        android:textSize="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_label_category_name"
        android:text="Category: "
        android:textSize="20dp"
        android:layout_below="@+id/TextView_label_book_name"
        android:textColor="#0f9ef7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_category_name"
        android:layout_toRightOf="@+id/TextView_label_category_name"
        android:textSize="20dp"
        android:layout_below="@+id/TextView_name"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:id="@+id/imageRead"
        android:layout_alignBottom="@+id/TextView_category_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />




</RelativeLayout>