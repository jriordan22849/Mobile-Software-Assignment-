<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_name_author"
        android:text="Book Name: "
        android:textSize="20sp"
        android:textColor="#0f9ef7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_name_author_field"
        android:layout_toRightOf="@+id/book_name_author"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_category_author"
        android:text="Book Category: "
        android:textSize="20sp"
        android:layout_below="@+id/book_name_author"
        android:textColor="#0f9ef7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_category_field"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/book_category_author"
        android:layout_toEndOf="@+id/book_category_author" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageForBookStatus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_alignParentTop="true" />




</RelativeLayout>