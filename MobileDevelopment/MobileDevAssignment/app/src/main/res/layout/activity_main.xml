<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_task"
        android:text="@string/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/editText_bookname"
        android:hint="Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_task"/>
    <EditText
        android:id="@+id/editText_booknameauthor"
        android:hint="Author"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_bookname"
        android:layout_alignEnd="@+id/editText_bookhave" />
    <EditText
        android:id="@+id/editText_bookcategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:layout_below="@+id/editText_booknameauthor"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_bookhave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Have Read"
        android:layout_below="@+id/editText_bookcategory"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:layout_below="@+id/editText_bookhave"/>

    <Button
        android:id="@+id/button_receive"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/receive"
        android:layout_below="@+id/button_submit"/>

    <ListView
        android:id="@+id/listView_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_receive"/>
</RelativeLayout>